<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                    <div class="form-group pb-2">
                        <input type="text" value="{{link.title }}" class="form-control" name="title" placeholder="title" required autofocus>
                    </div>
                    <div class="form-group pb-2">
                        <input type="url" name="url" value="{{link.url}}" class="form-control" placeholder="url" required>
                    </div>
                    <div class="form-group pb-2">
                        <textarea name="description"   rows="2" class="form-control" placeholder="description" required>{{link.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Save</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>